{
  "name": "v2ex-playground",
  "icon": "resources/icon.png",
  "displayName": "V2EX Playground",
  "description": "V2EX 游乐场，上班时用来放（mō）松（yú）的插件",
  "version": "1.2.0",
  "publisher": "chaselen",
  "repository": {
    "type": "git",
    "url": "https://github.com/chaselen/v2ex-playground"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "v2ex"
  ],
  "activationEvents": [
    "onView:v2ex-explore",
    "onCommand:topicItemClick"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "v2ex-explore.login",
        "title": "登录V2EX",
        "icon": "$(sign-in)"
      },
      {
        "command": "v2ex-explore.refreshAll",
        "title": "刷新",
        "icon": "$(refresh)"
      },
      {
        "command": "v2ex-explore.refreshNode",
        "title": "刷新节点",
        "icon": "$(refresh)"
      },
      {
        "command": "v2ex-explore.copyLink",
        "title": "复制链接"
      },
      {
        "command": "v2ex-explore.copyTitleLink",
        "title": "复制标题和链接"
      },
      {
        "command": "v2ex-explore.viewInBrowser",
        "title": "在浏览器中打开"
      },
      {
        "command": "v2ex-explore.addNode",
        "title": "添加节点",
        "icon": "$(add)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "v2ex",
          "title": "V2EX",
          "icon": "resources/v.svg"
        }
      ]
    },
    "views": {
      "v2ex": [
        {
          "id": "v2ex-explore",
          "name": "首页"
        },
        {
          "id": "v2ex-custom",
          "name": "自定义"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "v2ex-explore.login",
          "when": "view == v2ex-explore",
          "group": "navigation@0"
        },
        {
          "command": "v2ex-explore.refreshAll",
          "when": "view == v2ex-explore",
          "group": "navigation@1"
        },
        {
          "command": "v2ex-explore.addNode",
          "when": "view == v2ex-custom",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "v2ex-explore.refreshNode",
          "when": "view == v2ex-explore && viewItem == dir"
        },
        {
          "command": "v2ex-explore.refreshNode",
          "when": "view == v2ex-explore && viewItem == dir",
          "group": "inline"
        },
        {
          "command": "v2ex-explore.copyLink",
          "when": "view == v2ex-explore && viewItem == item"
        },
        {
          "command": "v2ex-explore.copyTitleLink",
          "when": "view == v2ex-explore && viewItem == item"
        },
        {
          "command": "v2ex-explore.viewInBrowser",
          "when": "view == v2ex-explore && viewItem == item"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.42.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "@types/cheerio": "^0.22.21",
    "art-template": "^4.13.2",
    "axios": "^0.19.0",
    "cheerio": "^1.0.0-rc.3",
    "form-data": "^3.0.0"
  }
}
